{
  "author": "Oliver Vinn <oliver@vinn.co.uk>",
  "description": "TENMA Power Supply Remote",
  "version": "0.3.0",
  "license": "MIT",
  "main": "./dist/main.js",
  "name": "power-supply-cmdr",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ovinn/powersupplycmdr.git"
  },
  "bugs": {
    "url": "https://github.com/ovinn/powersupplycmdr/issues"
  },
  "build": {
    "appId": "co.uk.vinn.powersupplycmdr",
    "asar": true,
    "directories": {
      "output": "build/"
    },
    "dmg": {
      "contents": [
        {
          "path": "/Applications",
          "type": "link",
          "x": 410,
          "y": 230
        },
        {
          "type": "file",
          "x": 130,
          "y": 230
        }
      ],
      "window": {
        "height": 380,
        "width": 540
      }
    },
    "files": [
      "dist/**/*",
      "_icons/icon.*"
    ],
    "linux": {
      "icon": "_icons/icon.png",
      "target": [
        "deb",
        "snap"
      ]
    },
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "_icons/icon.icns",
      "target": [
        "dmg",
        "zip"
      ],
      "type": "distribution"
    },
    "deb": {
      "fpm": [
        "--after-install=build/after-install.sh"
      ]
    },
    "npmRebuild": true,
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false
    },
    "productName": "PowerSupplyCmdr",
    "win": {
      "icon": "_icons/icon.ico",
      "target": [
        "nsis",
        "portable"
      ]
    }
  },
  "dependencies": {
    "@serialport/bindings": "^2.0.7",
    "chart.js": "^2.7.3",
    "chartjs-plugin-streaming": "^1.7.1",
    "electron-updater": "^4.0.6",
    "element-ui": "^2.5.4",
    "sass": "^1.17.2",
    "serialport": "^7.1.4",
    "vue": "^2.6.7",
    "vue-electron": "^1.0.6",
    "vue-i18n": "^8.8.2",
    "vue-router": "^3.0.2",
    "vuex": "^3.1.0",
    "vuex-electron": "^1.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.3.3",
    "@babel/plugin-proposal-class-properties": "^7.3.3",
    "@babel/preset-env": "^7.3.1",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "copy-webpack-plugin": "^5.0.0",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.0",
    "devtron": "^1.4.0",
    "electron": "~4.0.5",
    "electron-builder": "^20.38.5",
    "electron-debug": "^2.1.0",
    "eslint": "^5.14.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-esnext": "^4.0.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-import-resolver-webpack": "^0.11.0",
    "eslint-loader": "^2.1.2",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-vue": "^5.2.2",
    "fast-glob": "^2.2.6",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "inject-loader": "^4.0.1",
    "less": "^3.9.0",
    "less-loader": "^4.1.0",
    "mini-css-extract-plugin": "^0.5.0",
    "node-loader": "^0.6.0",
    "node-sass": "^4.11.0",
    "prettier": "^1.16.4",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-url": "^8.0.0",
    "purgecss-webpack-plugin": "^1.4.0",
    "sass-loader": "^7.1.0",
    "serve-static": "^1.13.2",
    "script-ext-html-webpack-plugin": "^2.1.3",
    "style-loader": "^0.23.1",
    "tree-kill": "1.2.1",
    "url-loader": "^1.1.2",
    "uglifyjs-webpack-plugin": "^2.1.2",
    "vue-devtools": "^5.0.0-beta.1",
    "vue-html-loader": "^1.2.4",
    "vue-loader": "^15.6.4",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.6.7",
    "webpack": "^4.29.5",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.2.0",
    "webpack-bundle-analyzer": "^3.0.4",
    "webpack-hot-middleware": "^2.24.3",
    "svg-sprite-loader": "3.8.0",
    "svgo": "1.0.5"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production npm run pack && electron-builder",
    "dev": "node ./_scripts/dev-runner.js",
    "lint": "eslint --ext .js,.vue --fix src && prettier --write ./src/**/*.js",
    "pack": "npm run pack:main && npm run pack:renderer",
    "pack:main": "webpack --hide-modules --config ./_scripts/webpack.main.config.js",
    "pack:renderer": "webpack --hide-modules --config ./_scripts/webpack.renderer.config.js",
    "postinstall": "electron-builder install-app-deps"
  },
  "babel": {
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ],
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "chrome": "69",
            "node": 10
          }
        }
      ]
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "bracketSpacing": true,
    "trailingComma": "none",
    "printWidth": 100
  },
  "eslintConfig": {
    "root": true,
    "parser": "vue-eslint-parser",
    "parserOptions": {
      "parser": "babel-eslint",
      "sourceType": "module",
      "ecmaVersion": 2018
    },
    "env": {
      "es6": true,
      "browser": true,
      "node": true
    },
    "extends": [
      "standard",
      "plugin:vue/recommended",
      "prettier",
      "prettier/babel",
      "prettier/standard",
      "prettier/vue"
    ],
    "globals": {
      "__static": true
    },
    "plugins": [
      "babel",
      "prettier",
      "standard",
      "vue"
    ],
    "rules": {
      "no-console": "error",
      "prettier/prettier": "error"
    }
  }
}
